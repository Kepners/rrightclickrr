{
  "name": "rrightclickrr",
  "version": "1.2.8",
  "description": "Right-click any folder to sync it to Google Drive",
  "main": "main.js",
  "author": "Kepners <kepners@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "node scripts/launch.js .",
    "dev": "node scripts/launch.js . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "create-icons": "node assets/create-icons.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kepners/rrightclickrr.git"
  },
  "keywords": [
    "google-drive",
    "sync",
    "upload",
    "windows",
    "context-menu",
    "right-click"
  ],
  "bugs": {
    "url": "https://github.com/Kepners/rrightclickrr/issues"
  },
  "homepage": "https://github.com/Kepners/rrightclickrr#readme",
  "dependencies": {
    "chokidar": "^3.6.0",
    "dotenv": "^16.4.7",
    "electron-store": "^8.2.0",
    "exit-on-epipe": "^1.0.1",
    "googleapis": "^170.1.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  },
  "build": {
    "appId": "com.kepners.rrightclickrr",
    "productName": "RRightclickrr",
    "copyright": "Copyright Â© 2026 Kepners",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*",
      "!assets/create-icons.js"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": "../.env"
      },
      {
        "from": "assets/",
        "to": "assets/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "shell-extension/dist/",
        "to": "../shell-extension/",
        "filter": [
          "*.dll"
        ]
      },
      {
        "from": "shell-extension/AppxManifest.xml",
        "to": "../shell-extension/AppxManifest.xml"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/rrightclickrr.ico"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "assets/rrightclickrr.ico",
      "uninstallerIcon": "assets/rrightclickrr.ico",
      "include": "installer.nsh"
    }
  }
}
